@model ProjetoFinal.Models.Usuario

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<head>
    <link rel="stylesheet" href="~/css/Login.css" asp-append-version="true" />
</head>
<div class="titlle">
    <h1>Login</h1>
    <h4>Digite email e senha para realizar o login.</h4>
</div>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Login" class="caixa">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group email">
                <label asp-for="EmailUsuario" class="control-label"></label>
                <input asp-for="EmailUsuario" class="form-control" />
                <span asp-validation-for="EmailUsuario" class="text-danger"></span>
            </div>
            <div class="form-group senha">
                <label asp-for="Senha" class="control-label"></label>
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="entrar" class="btn btn-primary botao" />
            </div>
            <h3>@ViewBag.Mensagem</h3>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
